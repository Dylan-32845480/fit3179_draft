{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 400,
    "title": "Total number of passengers handled by Malaysian airports in 2023",
    "projection": {
        "type": "equirectangular",
        "center": [108.596664, 4.545008],
        "scale": 2100
    },
    "layer": [
        {
            "data": {
                "values": [
                    {"type": "ocean", "coordinates": [[-180, 90], [180, 90], [180, -90], [-180, -90]]}
                ]
            },
            "mark": {
                "type": "rect",
                "fill": "#AEEEEE"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/Dylan-32845480/fit3179/refs/heads/week10homework/js/map_with_cities_and_gradicules.json",
                "format": {"type": "topojson", "feature":
                "ne_10m_admin_0_countries"}
            },
            "mark": {
                "type": "geoshape",
                "stroke": "darkgray"
            },
            "encoding": {
                "color": {
                    "condition": {
                        "test": "datum.properties.NAME === 'Malaysia'",
                        "value": "lightyellow"
                    },
                    "value": "lightgray"
                }
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/Dylan-32845480/fit3179/refs/heads/week10homework/js/map_with_cities_and_gradicules.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_graticules_10"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "darkgray"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/Dylan-32845480/fit3179/refs/heads/week10homework/data/2023_AirportPassengerData.csv" 
            },
            "mark": {
                "type": "circle",
                "fill": null,
                "stroke": "#b80000",
                "strokeWidth": 2,
                "tooltip": {
                    "content": "data"
                }
            },
            "encoding": {
                "longitude": {
                    "field": "Longitude",
                    "type": "quantitative"
                },
                "latitude": {
                    "field": "Latitude",
                    "type": "quantitative"
                },
                "size": {
                    "field": "Total_TOTAL",
                    "type": "quantitative",
                    "title": "Number of passengers handled",
                    "scale": {
                        "domain": [1019, 10578826],
                        "range": [1, 2500],
                        "type": "log"
                    }
                },
                "tooltip": [
                    {"field": "Airports", "type": "nominal", "title": "Airport"},
                    {"field": "Total_TOTAL", "type": "quantitative", "title": "Total number of passengers handled"}
                ]
            }
        }
    ]
}
